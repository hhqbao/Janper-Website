<script>
  $.fn.scrollView = function () {
    return this.each(function () {
      if (gMobileView) {
        $('html, body').animate({
          scrollTop: $(this).offset().top
        }, 300);
      }
      else {
        $('html, body').animate({
          scrollTop: $(this).offset().top
        }, 450);
      }
    });
  }
</script>

<script>
  $("#menuHamburger").click(function (event) {
